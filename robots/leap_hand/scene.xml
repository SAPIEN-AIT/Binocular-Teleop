<mujoco model="binocular_teleop">
  <include file="right_hand.xml"/>

  <statistic center="0 0.3 0.3" extent="0.6"/>

  <visual>
    <headlight diffuse="0.6 0.6 0.6" ambient="0.3 0.3 0.3" specular="0 0 0"/>
    <rgba haze="0.15 0.25 0.35 1"/>
    <global azimuth="120" elevation="-20"/>
  </visual>

  <worldbody>
    <light directional="true" diffuse=".5 .5 .5" specular="0.1 0.1 0.1"
           pos="0 0 1.5" dir="0 0 -1"/>
    <geom name="floor" type="plane" size="1 1 1" rgba="0.2 0.3 0.4 1"/>

    <!-- Kinematic anchor: vision drives this body; weld pulls the LEAP palm -->
    <body name="hand_proxy" mocap="true" pos="0 0.3 0.3">
      <geom type="sphere" size="0.008" rgba="1 0 0 0.4"
            contype="0" conaffinity="0"/>
    </body>

    <!-- Bottle (Ã—2 from previous) -->
    <body name="bottle" pos="0.05 0.3 0.094">
      <freejoint name="bottle_free"/>
      <geom name="bottle_body" type="box"
            size="0.044 0.036 0.094"
            pos="0 0 0" rgba="0.2 0.55 0.2 0.8"
            mass="0.03" friction="2 0.05 0.001" condim="4"/>
      <geom name="bottle_shoulder" type="box"
            size="0.032 0.032 0.016"
            pos="0 0 0.108" rgba="0.2 0.55 0.2 0.8"
            mass="0.005" friction="2 0.05 0.001" condim="4"/>
      <geom name="bottle_neck" type="cylinder"
            size="0.024 0.030"
            pos="0 0 0.154" rgba="0.2 0.55 0.2 0.8"
            mass="0.003" friction="2 0.05 0.001" condim="4"/>
      <geom name="bottle_rim" type="cylinder"
            size="0.036 0.010"
            pos="0 0 0.168" rgba="0.7 0.1 0.1 1.0"
            mass="0.002" condim="4"/>
    </body>
  </worldbody>

  <!--
    Soft weld: solref="0.01 1" absorbs sudden hand jumps (10 ms time constant).
    solimp near-rigid so the palm tracks the proxy closely but won't explode.
  -->
  <equality>
    <weld body1="hand_proxy" body2="palm"
          relpose="0 0 0 0.5 -0.5 0.5 0.5"
          solref="0.01 1" solimp="0.999 0.999 0.001"/>
  </equality>

</mujoco>
